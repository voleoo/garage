= form_for @phone do |f|
  - if @phone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phone.errors.count, "error")} prohibited this phone from being saved:"
      %ul
        - @phone.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :type_number
    = f.text_field :type_number
  .actions
    = f.submit 'Save'
